{
  "namespace": "brochure_form",
  
  "brochure_form@common_dialogs.main_panel_no_buttons_brochure": {
    "$title_panel": "common_dialogs.standard_title_label",
    "$title_size": [ "100% - 14px", 10 ],
    "size": [280, 190],
    "$text_name": "",
    "$title_text_binding_type": "none",
    "$child_control": "brochure_form.brochure_form_panel",
    "layer": 2,
	"bindings": [
			{
				"binding_name": "#title_text"
			},
			{
				"binding_type": "view",
				"source_property_name": "(#title_text = 'Brochure')",
				"target_property_name": "#visible"
			}
		]
},
"brochure_form_panel" : {
    "type": "stack_panel",
    "size": ["100%", "100%"],
    "orientation": "vertical",
    "layer": 1,
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      
      {
        "scrolling_panel@common.scrolling_panel": {
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "$show_background": false,
          "size": [ "100%", "100%" ],
          "$scrolling_content": "brochure_form.brochure_form_scrolling_content",
          "$scroll_size": [ 5, "100% - 2px" ],
          "$scrolling_pane_size": [ "100% - 4px", "100% - 32px" ],
          "$scrolling_pane_offset": [ 2, 28 ],
          "$scroll_bar_right_padding_size": [ 0, 0 ]
        }
      }
    ]
  },

  "brochure_form_scrolling_content": {
    "type": "stack_panel",
    "size": [ "100% - 4px", "100%c" ],
    "orientation": "vertical",
    "anchor_from": "top_left",
    "anchor_to": "top_left",

    "controls": [
      {
        "label_offset_panel": {
          "type": "panel",
          "size": ["100%", "100%c"],
          "controls": [
            {
              "main_label": {
                "type": "label",
                "offset": [2,0],
                "color": "$main_header_text_color",
                "size": ["100%", "default"],
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "text": "#form_text"
              }
            }
          ]
        }
      },
      {
        "padding": {
          "type": "panel",
          "size": [ "100%", 2 ]
        }
      },
      {
        "wrapping_panel": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "brochure_form_dynamic_buttons_panel@brochure_form.brochure_form_dynamic_buttons_panel": {}
            }
          ]
        }
      }
    ]
  },

  "brochure_form_dynamic_buttons_panel": {
    "type": "stack_panel",
    "size": ["100% - 4px", "100%c"],
    "offset": [2,0],
    "orientation": "vertical",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",

    "factory":{
      "name": "buttons",
      "control_name": "brochure_form.dynamic_button"
    },

    "collection_name": "form_buttons",
    "bindings": [
      {
        "binding_name": "#form_button_length",
        "binding_name_override": "#collection_length"
      }
    ]
  },

  "dynamic_button": {
    "type": "stack_panel",
    "size": ["100%", 20],
    "orientation": "horizontal",
    "controls":[                         
    ]
  }
}